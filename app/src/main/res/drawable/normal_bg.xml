<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_active="true" android:width="64dp" android:height="24dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffff0000" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_active="false" android:width="64dp" android:height="24dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffdadbdd" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>